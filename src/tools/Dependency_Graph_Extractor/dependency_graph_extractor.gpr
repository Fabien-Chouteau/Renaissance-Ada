with "libadalang.gpr";
with "../../libraries/GraphML_Writer_Lib/graphml_writer_lib.gpr";

project Dependency_Graph_Extractor is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Compiler is
      for Switches ("ada") use ("-gnatf", "-g", "-gnata", "-E", "-gnatwa");
   end Compiler;

   package Builder is
      for Executable ("main.adb") use "dependency_graph_extractor";
   end Builder;

end Dependency_Graph_Extractor;
